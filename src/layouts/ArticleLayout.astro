---
import BaseLayout from './BaseLayout.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  entry: CollectionEntry<'events'>;
}

const { entry } = Astro.props;
const { title, date, location, status, tags, sources, heroImage } = entry.data;

const formattedDate = new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
}).format(date);
---

<BaseLayout title={`${title} | Thai War Crimes`} description={entry.data.summary}>
  <article class="article-container">
    <div class="container">
      <header class="article-header">
        <div class="article-meta-top">
          <a href="/" class="back-link">
            <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Timeline
          </a>
          <span class={`status-badge ${status}`}>{status.replace('-', ' ')}</span>
        </div>

        <h1 class="article-title">{title}</h1>

        <div class="article-meta">
          <time datetime={date.toISOString()}>{formattedDate}</time>
          {location && (
            <>
              <span class="meta-separator">â€¢</span>
              <span class="location">{location}</span>
            </>
          )}
        </div>

        {tags.length > 0 && (
          <ul class="tag-list">
            {tags.map((tag) => (
              <li class="tag">{tag}</li>
            ))}
          </ul>
        )}
      </header>

      {heroImage && (
        <div class="hero-image">
          <img src={heroImage} alt={title} />
        </div>
      )}

      <div class="article-body">
        <slot />
      </div>

      {sources.length > 0 && (
        <aside class="sources-section">
          <h2 class="sources-title">Sources & References</h2>
          <ol class="sources-list">
            {sources.map((source) => (
              <li class="source-item">
                <a href={source.url} target="_blank" rel="noopener noreferrer" class="source-link">
                  <span class="source-label">{source.label}</span>
                  {source.publisher && <span class="source-publisher">{source.publisher}</span>}
                  {source.publishedAt && (
                    <time class="source-date">
                      {new Intl.DateTimeFormat('en-US', { year: 'numeric', month: 'short', day: 'numeric' }).format(source.publishedAt)}
                    </time>
                  )}
                </a>
                <svg class="external-link-icon" width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </li>
            ))}
          </ol>
        </aside>
      )}

      <footer class="article-footer">
        <p class="disclaimer">
          <strong>Disclaimer:</strong> The information presented is based on available sources.
          Events marked as "alleged" or "under investigation" represent unverified claims.
          We encourage critical evaluation of all sources and welcome additional documentation.
        </p>
      </footer>
    </div>
  </article>

  <style>
    .article-container {
      padding: var(--space-12) 0;
    }

    .article-header {
      margin-bottom: var(--space-12);
    }

    .article-meta-top {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: var(--space-8);
    }

    .back-link {
      display: inline-flex;
      align-items: center;
      gap: var(--space-2);
      font-size: var(--text-sm);
      font-weight: 500;
      color: var(--color-text-secondary);
    }

    .back-link:hover {
      color: var(--color-accent);
    }

    .article-title {
      font-size: var(--text-4xl);
      line-height: 1.1;
      margin-bottom: var(--space-6);
      max-width: var(--reading-width);
    }

    .article-meta {
      display: flex;
      align-items: center;
      gap: var(--space-3);
      font-size: var(--text-base);
      color: var(--color-text-secondary);
      margin-bottom: var(--space-6);
    }

    .meta-separator {
      color: var(--color-text-muted);
    }

    .location {
      display: flex;
      align-items: center;
    }

    .tag-list {
      display: flex;
      flex-wrap: wrap;
      gap: var(--space-2);
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .tag {
      padding: var(--space-2) var(--space-4);
      background: var(--color-neutral-100);
      border: 1px solid var(--color-border);
      border-radius: var(--border-radius);
      font-size: var(--text-sm);
      color: var(--color-text-secondary);
    }

    .hero-image {
      margin-bottom: var(--space-12);
      border-radius: var(--border-radius-lg);
      overflow: hidden;
      box-shadow: var(--shadow-lg);
    }

    .hero-image img {
      width: 100%;
      height: auto;
      display: block;
    }

    .article-body {
      max-width: var(--reading-width);
      margin: 0 auto;
      font-size: var(--text-lg);
      line-height: 1.75;
    }

    .article-body :global(h2) {
      margin-top: var(--space-16);
      padding-bottom: var(--space-3);
      border-bottom: 2px solid var(--color-border);
    }

    .article-body :global(h3) {
      margin-top: var(--space-12);
      color: var(--color-text-primary);
    }

    .article-body :global(h4) {
      margin-top: var(--space-8);
      font-size: var(--text-lg);
      font-weight: 600;
    }

    .article-body :global(img) {
      margin: var(--space-10) 0;
      border-radius: var(--border-radius);
      box-shadow: var(--shadow-md);
    }

    .article-body :global(blockquote) {
      margin: var(--space-8) 0;
      padding: var(--space-6);
      background: var(--color-neutral-100);
      border-left: 4px solid var(--color-accent);
      border-radius: var(--border-radius);
      font-style: italic;
    }

    .article-body :global(code) {
      font-family: var(--font-mono);
      font-size: 0.9em;
      background: var(--color-neutral-100);
      padding: var(--space-1) var(--space-2);
      border-radius: var(--border-radius-sm);
    }

    .article-body :global(pre) {
      margin: var(--space-8) 0;
      padding: var(--space-6);
      background: var(--color-neutral-900);
      color: var(--color-neutral-100);
      border-radius: var(--border-radius);
      overflow-x: auto;
    }

    .article-body :global(pre code) {
      background: none;
      padding: 0;
      color: inherit;
    }

    .sources-section {
      max-width: var(--reading-width);
      margin: var(--space-20) auto;
      padding: var(--space-8);
      background: var(--color-neutral-100);
      border-radius: var(--border-radius-lg);
      border: 1px solid var(--color-border);
    }

    .sources-title {
      font-size: var(--text-2xl);
      margin-bottom: var(--space-6);
      color: var(--color-text-primary);
    }

    .sources-list {
      list-style: none;
      padding: 0;
      margin: 0;
      counter-reset: source-counter;
    }

    .source-item {
      counter-increment: source-counter;
      margin-bottom: var(--space-4);
      padding: var(--space-4);
      background: var(--color-surface);
      border-radius: var(--border-radius);
      border: 1px solid var(--color-border);
      display: flex;
      align-items: flex-start;
      gap: var(--space-3);
      transition: box-shadow var(--transition-base);
    }

    .source-item:hover {
      box-shadow: var(--shadow-md);
    }

    .source-item::before {
      content: counter(source-counter);
      display: flex;
      align-items: center;
      justify-content: center;
      min-width: 24px;
      height: 24px;
      background: var(--color-accent);
      color: white;
      font-size: var(--text-xs);
      font-weight: 700;
      border-radius: 50%;
      margin-top: var(--space-1);
    }

    .source-link {
      flex: 1;
      display: flex;
      flex-direction: column;
      gap: var(--space-1);
    }

    .source-label {
      font-weight: 600;
      color: var(--color-text-primary);
      font-size: var(--text-base);
    }

    .source-publisher {
      font-size: var(--text-sm);
      color: var(--color-text-secondary);
    }

    .source-date {
      font-size: var(--text-xs);
      color: var(--color-text-muted);
    }

    .external-link-icon {
      flex-shrink: 0;
      color: var(--color-accent);
      margin-top: var(--space-1);
    }

    .article-footer {
      max-width: var(--reading-width);
      margin: var(--space-16) auto 0;
      padding-top: var(--space-8);
      border-top: 1px solid var(--color-border);
    }

    .disclaimer {
      padding: var(--space-6);
      background: rgba(251, 191, 36, 0.1);
      border: 1px solid rgba(251, 191, 36, 0.3);
      border-radius: var(--border-radius);
      font-size: var(--text-sm);
      line-height: 1.6;
      color: var(--color-text-secondary);
    }

    .disclaimer strong {
      color: var(--color-text-primary);
    }

    @media (max-width: 768px) {
      .article-container {
        padding: var(--space-8) 0;
      }

      .article-title {
        font-size: var(--text-3xl);
      }

      .article-meta-top {
        flex-direction: column;
        align-items: flex-start;
        gap: var(--space-4);
      }

      .article-body {
        font-size: var(--text-base);
      }
    }
  </style>
</BaseLayout>
