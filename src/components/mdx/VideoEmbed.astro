---
interface Props {
  src: string;
  title?: string;
  platform?: 'youtube' | 'vimeo' | 'generic';
}

const { src, title = 'Video', platform = 'generic' } = Astro.props;

// Extract video ID for YouTube and Vimeo
let embedUrl = src;

if (platform === 'youtube') {
  const youtubeRegex = /(?:youtube\.com\/(?:[^\/]+\/.+\/|(?:v|e(?:mbed)?)\/|.*[?&]v=)|youtu\.be\/)([^"&?\/\s]{11})/;
  const match = src.match(youtubeRegex);
  if (match && match[1]) {
    embedUrl = `https://www.youtube.com/embed/${match[1]}`;
  }
} else if (platform === 'vimeo') {
  const vimeoRegex = /vimeo\.com\/(\d+)/;
  const match = src.match(vimeoRegex);
  if (match && match[1]) {
    embedUrl = `https://player.vimeo.com/video/${match[1]}`;
  }
}
---

<figure class="video-embed">
  <div class="video-container">
    <iframe
      src={embedUrl}
      title={title}
      frameborder="0"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
      allowfullscreen
    ></iframe>
  </div>
  {title && <figcaption class="video-caption">{title}</figcaption>}
</figure>

<style>
  .video-embed {
    margin: var(--space-10) 0;
  }

  .video-container {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    height: 0;
    overflow: hidden;
    border-radius: var(--border-radius);
    background: var(--color-neutral-900);
    box-shadow: var(--shadow-md);
  }

  .video-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .video-caption {
    margin-top: var(--space-3);
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    text-align: center;
    font-style: italic;
  }
</style>

